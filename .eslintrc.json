{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "airbnb-typescript/base", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "semi": ["warn", "always"],
    "arrow-parens": ["warn", "always"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "import/prefer-default-export": "off"
  }
}
